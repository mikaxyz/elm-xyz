root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab

# 2 space indentation
[package.json]
indent_style = space
indent_size = 2

# 4 space indentation
[{*.elm,elm.json}]
indent_style = space
indent_size = 4
insert_final_newline = false
trim_trailing_whitespace = true
